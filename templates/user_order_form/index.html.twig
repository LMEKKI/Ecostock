{% extends 'base.html.twig' %}

{% block title %}order
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<form action="">
			{% for item in dataSheets %}
				<label for="{{item.name}}{{item.id}}">
					<img src="{{item.image}}" alt="{{item.description}}" style="height: 150px; width: 150px;">
					<p>{{item.name}}</p>
					<p>{{item.description}}</p>
				</label>
                <input id="{{item.name}}{{item.id}}" type="number">
			{% endfor %}
		</form>
        <button>Commander</button>
	</div>
{% endblock %}
