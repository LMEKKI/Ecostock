{% extends 'base.html.twig' %}

{% block title %}order
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		
		input[type=submit]{
			background-color: #04AA6D;
			border: none;
			color: white;
			padding: 8px 16px;
			text-decoration: none;
			margin: 4px 2px;
			cursor: pointer;
            transition-duration: 0.4s;
		}
        input[type=submit]:hover{
            background-color: #5fdbae;
            color: black;
        }
        input[type=submit]:active{
            background-color: #db5fb6;
            color: black;
        }
	</style>

	<div class="example-wrapper">
        {# {{form(form)}} #}
		<form action="" method="POST">
			{% for item in dataSheets %}
				<label for="{{item.name}}{{item.id}}">
					<img src="{{item.image}}" alt="{{item.description}}" style="height: 150px; width: 150px;">
					<p>{{item.name}}</p>
					<p>{{item.description}}</p>
				</label>
				<input id="{{item.name}}{{item.id}}" type="number">
			{% endfor %}
			<input type="submit">
		</form>
	</div>
	{# {% if commande %}
		<p>
			commande :
			<br>{{ commande }}</p>
	{% endif %} #}

{% endblock %}
